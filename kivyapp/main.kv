#:kivy 2.2.1

MDScreenManager:
    MainScreen:
    RuhaniScreen:

<MainScreen>:
    name: 'main'
    md_bg_color: 0.85, 0.75, 0.65, 1  # Light grayish-blue background color

    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint_y: None
            height: dp(100)
            padding: dp(25)
            MDBoxLayout:
                orientation: "horizontal"  # Set orientation to horizontal
                MDBoxLayout:
                    adaptive_size: True
                    spacing: dp(5)  # Reduce spacing
                    
                MDLabel:
                    text: "The Graceful Gain"
                    font_style: "H4"
                    theme_text_color: "Primary"  # Set text color to primary
                    valign: 'middle'  # Center the label vertically
                    halign: 'left'  # Align the label to the left
                    size_hint_x: None  # Set size_hint_x to None
                    width: dp(200)  # Set a fixed width for the label

            MDIconButton:
                icon: "images/notification.png"

        MDBoxLayout:
            orientation: 'vertical'
            padding: [dp(15), dp(5)]  # Reduce vertical padding, adjust spacing
            spacing: dp(10)  # Adjust spacing
            MDLabel:
                text: "In the ever-evolving realm of fitness, there's a new player in town that's changing the game. Technology is making its mark, and it's reshaping the way we approach workouts. In this article, we're introducing a groundbreaking workout regimen that's designed to take your fitness journey to new heights."
                theme_text_color: "Secondary"
                font_style: 'Body1'

        MDGridLayout:
            size_hint_y: None  # Fixed height
            height: dp(180)  # Set the desired height
            cols: 3
            padding: [dp(15), dp(5)]  # Reduce vertical padding, adjust spacing
            spacing: dp(10)  # Adjust the spacing between sections

            # First "SHIHAB" section
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                MDCard:
                    md_bg_color:69/255, 55/255, 86/255, 1
                    radius: dp(10)
                    on_release: app.show_tailored_for_you()
                    MDLabel:
                        halign: 'center'
                        text: "Tailored for you"
                        font_style: 'H6'

            # Second "SHIHAB" section
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                MDCard:
                    md_bg_color: 69/255, 55/255, 86/255, 1
                    radius: dp(10)
                    on_release: app.show_evolving_with_you()
                    MDLabel:
                        halign: 'center'
                        text: "Evolving with you"
                        font_style: 'H6'
                   

            # Third "SHIHAB" section
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                MDCard:
                    md_bg_color: 69/255, 55/255, 86/255, 1
                    radius: dp(10)
                    on_release: app.show_smart_exercise_choices()
                    MDLabel:
                        halign: 'center'
                        text: "Smart exercise choices"
                        font_style: 'H6'
                    

            # Fourth section
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                MDCard:
                    md_bg_color: 69/255, 55/255, 86/255, 1
                    radius: dp(10)
                    on_release: app.show_real_time_guidance()
                    MDLabel:
                        halign: 'center'
                        text: "Real time guidance"
                        font_style: 'H6'
                    

            # Fifth section
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                MDCard:
                    md_bg_color: 69/255, 55/255, 86/255, 1
                    radius: dp(10)
                    on_release: app.show_tracking_your_success()
                    MDLabel:
                        halign: 'center'
                        text: "Tracking your success"
                        font_style: 'H6'
                   
            # Sixth section
            MDBoxLayout:
                orientation: 'vertical'
                spacing: dp(10)
                MDCard:
                    md_bg_color: 69/255, 55/255, 86/255, 1
                    radius: dp(10)
                    on_release: app.show_recovery_and_prevention()
                    MDLabel:
                        halign: 'center'
                        text: "Prioritizing Recovery and Prevention"
                        font_style: 'H6'
<RuhaniScreen>:
    name: 'ruhani'
    md_bg_color: 69/255, 55/255, 86/255, 1

    BoxLayout:
        orientation: 'horizontal'
        
        MDCard:
            md_bg_color: 69/255, 55/255, 86/255, 1
            size_hint_x: 0.8  # 80% of the screen width
            padding: dp(25)
            MDBoxLayout:
                orientation: "vertical"
                spacing: dp(10)
                MDTextButton:
                    text: "Back to Home"
                    font_style: "Button"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                    halign: 'left'
                    on_release: root.back_to_home()
                    MDIcon:
                        icon: 'chevron-left'
                        halign: 'left'
                        size_hint_x: None
                        width: dp(20)

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: dp(15)
                spacing: dp(10)
                size_hint: 0.7, None
                height: self.minimum_height  # Set minimum height for scroll

                MDLabel:
                    id: section_label
                    halign: 'center'
                    text: ""
                    font_style: 'H6'
                    size_hint_y: None
                    height: self.texture_size[1]
